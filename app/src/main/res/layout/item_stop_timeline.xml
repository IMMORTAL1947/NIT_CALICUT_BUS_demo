<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/leftColumn"
        android:layout_width="24dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/statusDot"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/circle_upcoming" />

        <View
            android:id="@+id/timelineLine"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginStart="11dp"
            android:layout_marginTop="4dp"
            android:background="#E0E0E0" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rightColumn"
        android:layout_toRightOf="@id/leftColumn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="8dp">

        <TextView
            android:id="@+id/stopNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stop Name"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/stopTimeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="08:30"
            android:textSize="12sp"
            android:textColor="#607D8B" />
    </LinearLayout>

    <ImageView
        android:id="@+id/busIndicator"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignLeft="@id/timelineLine"
        android:layout_centerVertical="true"
        android:src="@android:drawable/ic_dialog_map"
        android:visibility="invisible" />

</RelativeLayout>

