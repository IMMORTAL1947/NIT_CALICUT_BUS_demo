<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <Spinner
                android:id="@+id/busSelector"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:id="@+id/routeTitle"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:text="Route"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/busTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BUS-ID"
            android:textColor="#607D8B"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/routingModeContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Routing Mode"
                android:textStyle="bold"
                android:textSize="14sp" />

            <RadioGroup
                android:id="@+id/routingModeGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/routingModeGoogle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Google Maps" />

                <RadioButton
                    android:id="@+id/routingModeCampus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Campus Route (Algorithmic)" />
            </RadioGroup>

            <TextView
                android:id="@+id/routingModeNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:text="Uses campus-specific paths not available in Google Maps"
                android:textColor="#607D8B"
                android:textSize="12sp"
                android:visibility="gone" />
        </LinearLayout>

        <fragment
            android:id="@+id/routeMap"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="205dp" />

        <TextView
            android:id="@+id/stepsHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="4dp"
            android:text="Campus Route Steps"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/stepsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:visibility="gone"
            android:clipToPadding="false" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="4dp"
            android:text="Route Timeline"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/stopsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

